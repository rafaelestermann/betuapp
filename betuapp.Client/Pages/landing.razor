@page "/"
@using Microsoft.AspNetCore.Components.Layouts
@layout MainLayoutLoggedOut
@inject IUriHelper uriHelper
<head>
    <link href="..//css/landing.css" rel="stylesheet" />
</head>

<body>
    <div id="landingcontainer">
        <img src="..//logo/Logo_NoText.svg" class="icon-logo" alt="icon from bet u" />
        <h1>
            <img src="..//logo/Logo_OnlyText.svg" class="icon-text" alt="icon from bet u" height="30%" />
        </h1>
        <p>easy, accessible</p>
        <button onclick="@GetStarted">Get Started</button>
    </div>
    <div class="container">
        <div class="row">
            <div class="column-1">
                <video autoplay="autoplay">
                    <source src="..//video/betU.mp4" />
                </video>
            </div>
        </div>
    </div>
</body>

@functions{
    async Task GetStarted()
    {
        this.uriHelper.NavigateTo("/registration");
    }

}
